@using Library.Models.Entity
@model List<Author>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>YAZARLAR</h2>

<table class="table table-bordered">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>ID</th>
        <th>AD</th>
        <th>SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>YAZARIN KİTAPLARI</th>
    </tr>
    
    @foreach(var y in Model )
    {  <tr>
         <td>@y.Id</td>
         <td>@y.AuthorName</td>
         <td>@y.AuthorSurname</td>
         <td>@Html.ActionLink("Sil","YazarSil",new { id = y.Id }, new
        {
            @class = "btn btn-danger",
            onclick = "return confirm('Silmek istediğinizden emin misiniz?')"
        })</td>
         <td><a href="/Author/YazarGetir/@y.Id" class="btn btn-success">Güncelle</a></td>
         <td><a href="/Author/YazarKitaplar/@y.Id" class="btn btn-default" style="background-color:lightsalmon; color:white;">Yazarın Kitapları</a></td>
     
        </tr>
    }
</table>

<a class="btn btn-primary" href="/Author/YazarEkle/">Yeni Yazar Ekle</a>