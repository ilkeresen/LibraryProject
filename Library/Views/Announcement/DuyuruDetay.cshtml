@model Library.Models.Entity.Announcements
@{
    ViewBag.Title = "DuyuruDetay";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("DuyuruGuncelle", "Announcement", FormMethod.Post))
{

<div style="margin-bottom:15px"></div>
<div class="form-group">

    <label>ID</label>
    @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
    <br />

    <label>Duyuru Kategori</label>
    @Html.TextBoxFor(k => k.Category, new { @class = "form-control" })
    <br />
    <label>Duyuru İçerik</label>
    @Html.TextAreaFor(k => k.Contents, new { @class = "form-control" })
    <br />
    <label>Duyuru Tarih</label>
    @Html.TextBoxFor(k => k.Date, new { @class = "form-control" })

</div>
<div>
    <button class="btn btn-warning">Güncelle</button>
</div>
}


