@model Library.Models.Entity.Member
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Üye Profil Bilgileri</h2>

@using (Html.BeginForm("Index2", "Panel", FormMethod.Post))
{

<table class="table table-hover" style="margin-top:30px">
    <tr>
        <td>
            <label style="font-weight:bolder">Mail Adresi:</label>
            @HttpContext.Current.User.Identity.Name
        </td>

    </tr>

    <tr>
        <td>

            @Html.TextBoxFor(x => x.MemberName, new { @class = "form-control" })
        </td>
    </tr>

    <tr>
        <td>
            @Html.TextBoxFor(x => x.MemberSurname, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.UserName, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.Photo, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>

            @Html.TextBoxFor(x => x.School, new { @class = "form-control" })
        </td>
    </tr>
    <tr>
        <td>
            <button class="btn btn-warning">Güncelle</button>
        </td>
    </tr>
</table>
}