@model Library.Models.Entity.Messages
@{
    ViewBag.Title = "YeniMesaj";
    Layout = "~/Views/Shared/_LayoutPanel.cshtml";
}

<h2>Yeni Mesaj</h2>

<form class="form-group" method="post">
    <div></div>
    <div style="margin-top:15px">
        <label>Alıcı Mail</label>

        @Html.TextBoxFor(x => x.Alıcı, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>Konu</label>

        @Html.TextBoxFor(x => x.Konu, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <label>İçerik</label>

        @Html.TextAreaFor(x => x.İçerik, new { @class = "form-control" })

    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info" id="Btn1">Gönder</button>
    </div>


</form>