@model Library.Models.Entity.Book
@{
    ViewBag.Title = "KitapGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KitapGuncelle", "Book", FormMethod.Post))
{
    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        <div style="margin-bottom:15px">
            <label>Kitap ID</label>
            @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kitap Adı</label>
            @Html.TextBoxFor(k => k.BookName, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Kategori</label>
            @Html.DropDownListFor(k => k.Category1.Id, (List<SelectListItem>)ViewBag.dgr1,
       new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yazar</label>
            @Html.DropDownListFor(k => k.Author1.Id, (List<SelectListItem>)ViewBag.dgr2,
      new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Basım Yılı</label>
            @Html.TextBoxFor(k => k.PublicationYear, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Yayınevi</label>
            @Html.TextBoxFor(k => k.Publisher, new { @class = "form-control" })
        </div>
        <div style="margin-bottom:15px">
            <label>Sayfa</label>
            @Html.TextBoxFor(k => k.Page, new { @class = "form-control" })
        </div>

        <button class="btn btn-warning">Kitap Bilgilerini Güncelle</button>
        <input type="hidden" name="Status" value="True" />
    </div>

}

