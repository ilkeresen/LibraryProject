@model Library.Models.Entity.Action
@{
    ViewBag.Title = "OduncIade";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("OduncGuncelle", "Borrow", FormMethod.Post))
{

    <div style="margin-bottom:15px"></div>
    <div class="form-group">

        <label>İşlem ID</label>
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />

        <label>Kitap Adı</label>
        @Html.TextBoxFor(k => k.Book1.BookName, new { @class = "form-control" })

        <br />

        <label>Üye</label>
        @Html.TextBoxFor(k => k.Member1.MemberName, new { @class = "form-control" })
        <br />

        <label>Personel</label>
        @Html.TextBoxFor(k => k.Staff1.Staff1, new { @class = "form-control" })

        <br />

        <label>Alış Tarihi</label>
        @Html.TextBoxFor(k => k.BorrowDate, "{0:dd.MM.yyyy}", new { @class = "form-control" })

        <br />

        <label>İade Tarihi</label>
        @Html.TextBoxFor(k => k.ReturnDate, "{0:dd.MM.yyyy}", new { @class = "form-control" })

        <br />

        <label>Üyenin Getirdiği Tarih</label>
        <input type="text" class="form-control" name="MemberDate"
               value="@DateTime.Now.ToShortDateString() " />
    
        <br />
        <label>Geç Gelen Gün Sayısı</label>
        <input type="text" class="form-control" id="Gecinput" value="@ViewBag.dgr" />
    
    </div>
    <div>
        <button class="btn btn-group" style="background-color: #38d508; color: white">Ödünç Kitabı Geri Al</button>
    </div>
}


