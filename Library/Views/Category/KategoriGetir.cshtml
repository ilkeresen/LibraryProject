@model Library.Models.Entity.Category
@{
    ViewBag.Title = "KategoriGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("KategoriGuncelle","Category",FormMethod.Post))
{ 

    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*Html.LabelFor(k => k.Id)*@
        <label>ID</label>
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        @*Html.LabelFor(k=>k.CategoryName)*@
        <label>KATEGORİ ADI</label>
        @Html.TextBoxFor(k => k.CategoryName, new { @class = "form-control" })
    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

