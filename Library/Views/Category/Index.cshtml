@using Library.Models.Entity
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>KATEGORİLER</h2>

<table class="table table-bordered">
    <tr style="background-color:rgb(252, 178, 22)">
        <th>KATEGORİ ID</th>
        <th>KATEGORİ ADI</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
    </tr>

      @foreach(var ktg in Model)
      {  
    <tr>
        <td>@ktg.Id</td> @*ktg den gelen Id adı *@
        <td>@ktg.CategoryName</td>
         <td><a href="/Category/KategoriSil/@ktg.Id" class="btn btn-danger">Sil</a></td>
         <td><a href="/Category/KategoriGetir/@ktg.Id" class="btn btn-success">Güncelle</a></td>
    </tr>
    }
</table>

<a href="/Category/KategoriEkle/" class="btn btn-primary">Yeni Kategori Ekle</a>