@model Library.Models.Entity.Member
@{
    ViewBag.Title = "UyeGetir";
    Layout = "~/Views/Shared/Layout.cshtml";
}

@using (Html.BeginForm("UyeGuncelle", "Member", FormMethod.Post))
{

    <div style="margin-bottom:15px"></div>
    <div class="form-group">
        @*@Html.LabelFor(k => k.Id)*@
        <label>ID</label>
        @Html.TextBoxFor(k => k.Id, new { @class = "form-control" })
        <br />
        @*Html.LabelFor(k=>k.CategoryName)*@
        <label>Üye Adı</label>
        @Html.TextBoxFor(k => k.MemberName, new { @class = "form-control" })
        <br />
        <label>Üye Soyadı</label>
        @Html.TextBoxFor(k => k.MemberSurname, new { @class = "form-control" })
        <br />
        <label>Kullanıcı Adı</label>
        @Html.TextBoxFor(k => k.UserName, new { @class = "form-control" })
        <br />
        <label>Şifre</label>
        @Html.TextBoxFor(k => k.Password, new { @class = "form-control" })
        <br />
        <label>Email</label>
        @Html.TextBoxFor(k => k.Email, new { @class = "form-control" })
        <br />
        <label>Okul</label>
        @Html.TextBoxFor(k => k.School, new { @class = "form-control" })
        <br />
        <label>Telefon</label>
        @Html.TextBoxFor(k => k.Phone, new { @class = "form-control" })
        <br />
        <label>Fotoğraf Linki</label>
        @Html.TextBoxFor(k => k.Photo, new { @class = "form-control" })
        <br />

    </div>
    <div>
        <button class="btn btn-warning">Güncelle</button>
    </div>
}

